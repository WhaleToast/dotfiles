{
    "custom/arch": {
        "format": "󰣇",
        "tooltip": true,
        "tooltip-format": "btw"
    },
    "tray":{},
    "custom/mouse-battery":{
        "exec": "solaar show | grep -A 1 'Battery:' | tail -2 | awk '{print $2}' | tr -d ','",
        "format": "<span color='#29a2f2'>󰍽</span> {}",
        "interval": 300

    },
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{icon} {name}",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": "<span color='#29a2f2'></span>"
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },
    "pulseaudio#main": {
        "format": "{format_source}",
        "format-source": "{icon}  {volume}%",
        "format-muted": "  {format_source}",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol",
        "ignored-sinks": ["Main"]
    },
    "pulseaudio#music": {
        "format": "{icon}  {volume}%",
        "format-muted": "  {format_source}",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol",
        "ignored-sinks": ["main_audio"]
    },
    "custom/audio-main": {
        "exec": "pactl get-sink-volume 'main_audio' | grep -oP '\\d+(?=%)' | head -1",
        "interval": 1,
        "format": "<span color='#29a2f2'>󰋋 </span>{}%",
        "on-click": "pavucontrol",
        "on-scroll-up": "pactl set-sink-volume 'main_audio' +5%",
        "on-scroll-down": "pactl set-sink-volume 'main_audio' -5%",
        "tooltip": false,
        "format-icons": {
            "default": ["", "", ""]

        }
    },

    "custom/audio-music": {
        "exec": "pactl get-sink-volume 'music_audio' | grep -oP '\\d+(?=%)' | head -1",
        "interval": 1, 
        "format": "<span color='#29a2f2'>󰝚 </span>{}%",
        "on-click": "pavucontrol",
        "on-scroll-up": "pactl set-sink-volume 'music_audio' +5%",
        "on-scroll-down": "pactl set-sink-volume 'music_audio' -5%",
        "tooltip": false
    },

    "network": {
        "interface": "wlp5s0",
        "format-wifi": "<span color='#29a2f2'> </span>({signalStrength}%) {bandwidthUpBits}<span color='#29a2f2'> ↑</span> {bandwidthDownBits} <span color='#29a2f2'>↓</span>",
        "format-ethernet": "{ipaddr}/{cidr} {bandwidthUpBits} ↑ {bandwidthDownBits} ↓",
        "tooltip-format": "{ifname}\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "interval": 5,
        "tooltip": true,
        "max-length": 30,
        "max-width": 10

    },
    "custom/cpu": {
        "exec": "top -bn1 | grep \"Cpu(s)\" | sed \"s/.*, *\\([0-9.]*\\)%* id.*/\\1/\" | awk '{printf \"%.0f\", 100 - $1}'",
        "format": "<span color='#29a2f2'> </span> {}%",
        "tooltip": false,
        "interval": 5
    },
    "memory": {
        "format": "<span color='#29a2f2'> </span> {used:0.1f}GB",
        "tooltip": false
    },
    "temperature": {
        "interval": 10,
        "hwmon-path": "/sys/class/hwmon/hwmon0/temp1_input",
        "critical-threshold": 100,
        "format-critical": " {temperatureC}",
        "format": " {temperatureC}°C"
    },
    "hyprland/language": {
        "format": "  {}",
        "format-en": "EN",
        "format-ru": "RU"
    },  
    "clock": {
        "format": " <span color='#29a2f2'>󰥔</span> {:%H:%M | <span color='#29a2f2'> </span>%e} ",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    }

}
